<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageviewbackgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <View
        android:background="@drawable/custom_background_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    
    <RelativeLayout
        android:id="@+id/raltivel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageviewbackgroundbanner"
        >
        <ImageView
            android:id="@+id/imagebanner"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/textviewtitlebannerbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@+id/imagebanner"
            android:layout_toRightOf="@+id/imagebanner"
            android:textSize="17sp"
            android:text="Lo yeu mat roi"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imagebanner"
            android:layout_below="@id/textviewtitlebannerbaihat"
            android:layout_marginTop="7dp"
            >
            <TextView
                android:id="@+id/textviewnoidung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginRight="40dp"
                android:maxLines="2"
                android:text="Chao ban den voi ca khuc cua ca si hot nhat hien nay"
                android:textColor="#fffdfc"
                />


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>